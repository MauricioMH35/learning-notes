<!DOCTYPE html>
<html lang="pt-br">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Imprimir</title>

   <link rel="stylesheet" href="/styles/reset.css" type="text/css">
   <link rel="stylesheet" href="/styles/main.css" type="text/css">
   <link rel="stylesheet" href="/styles/print.css" type="text/css" media="print">
</head>
<body>
   <div class="no-print" style="margin-bottom: 20px; display: grid; grid-template-columns: repeat(2, 1fr);">
      <h1 class="no-print" style="
         margin: 5px 20px; 
         padding: 5px 20px; 
         border-radius: 20px; 
         border: 10px solid rgb(200, 0, 255);
         text-align: center;
      "><a href="/">Voltar</a></h1>
      <h1 class="no-print" style="
         margin: 5px 20px; 
         padding: 5px 20px; 
         border-radius: 20px; 
         border: 10px solid rgb(200, 0, 255);
         text-align: center;
      "><a onclick="window.print()">imprimir</a></h1>
   </div>
   <br class="no-print">

   <h3><p class="txt-center"><%= name %></p></h3>
   <br>
   <% address.map(address => { %>
      <% if(address.type === 'trabalho') { %>
         <p class="txt-center" style="font-size: 10pt;">
            <%= address.street %>, <%= address.number %>, <%= address.city %>, <%= address.state %>, <%= address.cep %>
         </p>
      <% } %>
   <% }); %>
   <p class="txt-center" style="font-size: 10pt;"><%= birth %></p>
   <p class="txt-center" style="font-size: 10pt;"><%= status %></p>
   <br>
   <% phones.map(phones => { %> 
      <% if(phones.type === 'trabalho') { %>
         <p class="txt-center">+55 11 <%= phones.phone %></p>
      <% } %>   
   <% }); %>
   <% emails.map(emails => { %> 
      <% if(emails.type === 'trabalho') { %>
         <p class="txt-center" style="font-size: 10pt;"><%= emails.email %></p>
      <% } %>
   <% }); %>
   <br>
   
   <h4><p class="txt-left">Objetivo</p></h4>
   <hr>
   <p class="txt-justfy"><%= objective %></p>
   <br>

   <h4><p class="txt-left">Formação</p></h4>
   <hr>
   <% formations.map(formations => { %>
      <% if(formations.status === 'concluido') { %>
         <p class="txt-justfy">
            <%= formations.institute %>: <%= formations.description%>
            (<%= formations.start %> - <%= formations.end %>)
         </p>
         <br>
      <% } %>
   <% }); %>

   <h4><p class="txt-left page-break">Idiomas</p></h4>
   <hr>
   <% languages.map(languages => { %>
      <% if(languages !== null) { %>
         <% if(languages.level === 'avançado') { %>
            <p class="txt-left"><%= languages.language %> [<%= languages.level %>]</p>
         <% } %>
         <% if(languages.level === 'intermediário') { %>
            <p class="txt-left"><%= languages.language %> [<%= languages.level %>]</p>
         <% } %>
         <% if(languages.level === 'básico') { %>
            <p class="txt-left"><%= languages.language %> [<%= languages.level %>]</p>
         <% } %>
      <% } %>
   <% }); %>
   <br>

   <h4><p class="txt-left">Experiências profissionais</p></h4>
   <hr>
   <% experiences.map(experiences => { %>
      <% if(experiences.status === 'trabalhando') { %>
         <p class="txt-justfy">
            <%= experiences.institute %>: <%= experiences.description%>
            (<%= experiences.start %> - <%= experiences.end %>)
            [<%= experiences.status %>]
         </p>
         <br>
      <% } else if(experiences.status === 'concluido') { %>
         <p class="txt-justfy">
            <%= experiences.institute %>: <%= experiences.description%>
            (<%= experiences.start %> - <%= experiences.end %>)
         </p>
         <br>
      <% } %>
   <% }); %>

   <h4><p class="txt-left">Atividade extracurricular</p></h4>
   <hr>
   <p class="txt-justfy"><%= extracurricular %></p>
   <br>

   <h4><p class="txt-left page-break">Cursos</p></h4>
   <hr>
   <% courses.map(courses => { %>
      <% if(courses.status === 'trabalhando') { %>
         <p class="txt-justfy">
            <%= courses.institute %>: <%= courses.description%>
            (<%= courses.start %> - <%= courses.end %>)
            [<%= courses.status %>]
         </p>
         <br>
      <% } else if(courses.status === 'concluido') { %>
         <p class="txt-justfy">
            <%= courses.institute %>: <%= courses.description%>
            (<%= courses.start %> - <%= courses.end %>)
         </p>
         <br>
      <% } %>
   <% }); %>

   <h4><p class="txt-left">Conhecimentos complementares</p></h4>
   <hr>
   <% knowledges.map(knowledges => { %>
      <% if(knowledges !== null) { %>
         <% if(knowledges.level === 'avançado') { %>
            <p class="txt-left"><%= knowledges.knowledge %> [<%= knowledges.level %>]</p>
         <% } %>
         <% if(knowledges.level === 'intermediário') { %>
            <p class="txt-left"><%= knowledges.knowledge %> [<%= knowledges.level %>]</p>
         <% } %>
         <% if(knowledges.level === 'básico') { %>
            <p class="txt-left"><%= knowledges.knowledge %> [<%= knowledges.level %>]</p>
         <% } %>
      <% } %>
   <% }); %>

</body>
</html>